{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"allowJs": true,
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"allowArbitraryExtensions": true
	},
	"include": ["src", "tests"]
}
